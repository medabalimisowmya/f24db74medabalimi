extends layout

block content
  h1= title
  p Welcome to Sowmya's Assignment Output.
  button(type="button", class="btn btn-secondary") Sample Button
  button(type="button", class="btn btn-primary", onclick="boost()") Press me
  div#boost Add in extra
  script.
    let value = 0;
    let amt = 3;

    function boost() {
      amt += 1;
      value += amt;
      document.getElementById("boost").textContent = `Boosted ${value} by ${amt}`;
    }

  if !user
    a(href="/login") Login
    br
    a(href="/register") Register

  if user
    p You are currently logged in as #{user.username}
    a(href="/devices") Take me to devices
    br
    a(href="/logout") Logout
